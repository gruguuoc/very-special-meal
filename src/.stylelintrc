{
 "extends": ["stylelint-config-recommended-scss"],
 "rules": {
    "selector-class-pattern": "^.[a-z]([a-z0-9-]+)?(__([a-z0-9]+-?)+)?(--([a-z0-9]+-?)+){0,2}$",
    "selector-max-id": 0,
    "selector-max-type": 0,
    "max-nesting-depth": 2,
    "declaration-no-important": true,
    "selector-max-attribute": 0,
    "selector-max-combinators": 0,
    "selector-max-universal": 1
 }
}